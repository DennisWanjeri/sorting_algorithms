#include "sort.h"
/**
 *shell_sort - sorts an array using shell algorithm
 *@array:array to sort
 *@size:size of array
 *Return:void
 */
void shell_sort(int *array, size_t size)
{
	size_t i, j, intv, tmp;

	if (array == NULL || size < 2)
		return;
	for (intv = size / 2; intv > 0; intv /= 2)
	{
		for (i = intv; i < size; i++)
		{
			tmp = array[i];
			for (j = i;
			     j >= intv && array[j - intv] > tmp; j -= intv)
			{
				array[j] = array[j - intv];
			}
			array[j] = tmp;
		}
	}
}
